<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="16dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_pojedynek"
    tools:context=".Pojedynek"
    tools:layout_editor_absoluteY="56dp">



    <TextView
        android:id="@+id/textPojedynek"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Walczą Zawodnicy:"
        android:textSize="32dp"
        />



    <TextView
        android:id="@+id/btnTextZawodnik1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="kliknieciePojedynekEkran"
        android:layout_below="@+id/textPojedynek"
        android:layout_marginTop="32dp"
        android:textSize="32dp"
        />

    <TextView
        android:id="@+id/btnTextZawodnik2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="kliknieciePojedynekEkran"
        android:layout_below="@+id/btnTextZawodnik1"
        android:layout_marginTop="32dp"
        android:textSize="32dp"
        />

    <TextView
        android:id="@+id/textPojedynek2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnTextZawodnik2"
        android:layout_marginTop="64dp"
        android:text="Wybierz zwycięzcę pojedynku"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="16dp" />


</RelativeLayout>